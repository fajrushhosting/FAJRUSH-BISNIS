<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kalkulator Harga Jual & Profit</title>
    <style>
        /* Reset CSS */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8fafc;
            color: #1e293b;
            line-height: 1.6;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        /* Header Styles */
        header {
            text-align: center;
            margin-bottom: 40px;
            padding: 30px;
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            color: white;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(59, 130, 246, 0.2);
        }
        
        header h1 {
            font-size: 2.8rem;
            margin-bottom: 15px;
            font-weight: 700;
        }
        
        header p {
            font-size: 1.2rem;
            opacity: 0.9;
            max-width: 700px;
            margin: 0 auto;
        }
        
        /* Main Layout */
        .main-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 40px;
        }
        
        @media (max-width: 992px) {
            .main-content {
                grid-template-columns: 1fr;
            }
        }
        
        /* Card Styles */
        .card {
            background-color: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
        }
        
        .card-title {
            font-size: 1.8rem;
            color: #1e293b;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 3px solid #3b82f6;
            display: flex;
            align-items: center;
        }
        
        .card-title i {
            margin-right: 12px;
            color: #3b82f6;
        }
        
        /* Form Styles */
        .form-group {
            margin-bottom: 25px;
        }
        
        label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: #475569;
            font-size: 1.1rem;
        }
        
        .input-with-unit {
            position: relative;
        }
        
        .input-with-unit input {
            width: 100%;
            padding: 16px 20px;
            padding-right: 60px;
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            font-size: 1.1rem;
            transition: all 0.3s;
        }
        
        .input-with-unit input:focus {
            border-color: #3b82f6;
            outline: none;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }
        
        .input-unit {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-weight: 600;
            color: #64748b;
        }
        
        .help-text {
            font-size: 0.9rem;
            color: #94a3b8;
            margin-top: 8px;
        }
        
        /* Button Styles */
        .button-group {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }
        
        button {
            flex: 1;
            padding: 18px 20px;
            border: none;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        
        .btn-primary {
            background-color: #3b82f6;
            color: white;
        }
        
        .btn-primary:hover {
            background-color: #2563eb;
            transform: translateY(-3px);
            box-shadow: 0 7px 15px rgba(59, 130, 246, 0.3);
        }
        
        .btn-secondary {
            background-color: #f1f5f9;
            color: #475569;
        }
        
        .btn-secondary:hover {
            background-color: #e2e8f0;
            transform: translateY(-3px);
        }
        
        /* Result Styles */
        .result-card {
            background-color: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
        }
        
        .result-title {
            font-size: 1.1rem;
            color: #64748b;
            margin-bottom: 10px;
            font-weight: 600;
        }
        
        .result-value {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 5px;
        }
        
        .result-detail {
            font-size: 1.1rem;
            color: #64748b;
        }
        
        .profit {
            color: #10b981;
        }
        
        .loss {
            color: #ef4444;
        }
        
        .neutral {
            color: #6b7280;
        }
        
        .result-row {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 25px;
            margin-bottom: 30px;
        }
        
        @media (max-width: 768px) {
            .result-row {
                grid-template-columns: 1fr;
            }
        }
        
        /* Chart Styles */
        .chart-container {
            margin-top: 30px;
            height: 220px;
            display: flex;
            align-items: flex-end;
            justify-content: space-between;
            gap: 15px;
            padding: 25px;
            background-color: #f8fafc;
            border-radius: 12px;
        }
        
        .chart-bar {
            flex: 1;
            border-radius: 8px 8px 0 0;
            position: relative;
            min-height: 5px;
            transition: height 1s ease;
        }
        
        .chart-bar-label {
            position: absolute;
            bottom: -40px;
            left: 0;
            width: 100%;
            text-align: center;
            font-size: 0.95rem;
            color: #475569;
            font-weight: 600;
        }
        
        .chart-bar-value {
            position: absolute;
            top: -35px;
            left: 0;
            width: 100%;
            text-align: center;
            font-weight: 700;
            font-size: 1.1rem;
        }
        
        .cost-bar {
            background: linear-gradient(to top, #ef4444, #f87171);
        }
        
        .price-bar {
            background: linear-gradient(to top, #3b82f6, #60a5fa);
        }
        
        .profit-bar {
            background: linear-gradient(to top, #10b981, #34d399);
        }
        
        /* Explanation Section */
        .explanation {
            background-color: white;
            padding: 35px;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
            margin-top: 30px;
        }
        
        .explanation h3 {
            color: #1e293b;
            margin-bottom: 20px;
            font-size: 1.8rem;
            display: flex;
            align-items: center;
        }
        
        .explanation h3 i {
            margin-right: 12px;
            color: #3b82f6;
        }
        
        .explanation p {
            margin-bottom: 20px;
            color: #475569;
            font-size: 1.1rem;
            line-height: 1.8;
        }
        
        .formula-box {
            background-color: #f0f9ff;
            padding: 20px;
            border-radius: 10px;
            margin: 20px 0;
            border-left: 5px solid #3b82f6;
            font-family: 'Courier New', monospace;
            font-size: 1.3rem;
            font-weight: 600;
            color: #1e293b;
        }
        
        .highlight {
            background-color: #fef3c7;
            padding: 4px 8px;
            border-radius: 5px;
            font-weight: 600;
        }
        
        ul {
            margin-left: 25px;
            margin-bottom: 20px;
        }
        
        li {
            margin-bottom: 12px;
            color: #475569;
            font-size: 1.1rem;
        }
        
        /* Footer */
        footer {
            text-align: center;
            margin-top: 50px;
            padding-top: 25px;
            border-top: 1px solid #e2e8f0;
            color: #64748b;
            font-size: 1rem;
        }
        
        /* Responsive adjustments */
        @media (max-width: 576px) {
            header h1 {
                font-size: 2.2rem;
            }
            
            header p {
                font-size: 1rem;
            }
            
            .card, .result-card, .explanation {
                padding: 20px;
            }
            
            .result-value {
                font-size: 2rem;
            }
            
            .button-group {
                flex-direction: column;
            }
            
            button {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Kalkulator Harga Jual & Profit</h1>
            <p>Hitung harga jual yang akurat dan analisis keuntungan atau kerugian bisnis Anda dengan mudah</p>
        </header>
        
        <div class="main-content">
            <div class="card">
                <h2 class="card-title"><i class="fas fa-calculator"></i> Input Data</h2>
                
                <div class="form-group">
                    <label for="hpp">Harga Pokok Penjualan (HPP)</label>
                    <div class="input-with-unit">
                        <input type="number" id="hpp" min="0" step="100" placeholder="Contoh: 50000" value="50000">
                        <span class="input-unit">Rp</span>
                    </div>
                    <div class="help-text">Biaya yang dikeluarkan untuk membeli/memproduksi barang</div>
                </div>
                
                <div class="form-group">
                    <label for="margin">Margin Keuntungan (%)</label>
                    <div class="input-with-unit">
                        <input type="number" id="margin" min="0" max="500" step="0.5" placeholder="Contoh: 30" value="30">
                        <span class="input-unit">%</span>
                    </div>
                    <div class="help-text">Persentase keuntungan yang ingin Anda dapatkan</div>
                </div>
                
                <div class="form-group">
                    <label for="biaya-tambahan">Biaya Tambahan (Opsional)</label>
                    <div class="input-with-unit">
                        <input type="number" id="biaya-tambahan" min="0" step="100" placeholder="Contoh: 5000" value="5000">
                        <span class="input-unit">Rp</span>
                    </div>
                    <div class="help-text">Biaya operasional, pengemasan, transportasi, dll.</div>
                </div>
                
                <div class="button-group">
                    <button class="btn-primary" id="hitung-btn">
                        <i class="fas fa-calculator"></i> Hitung Sekarang
                    </button>
                    <button class="btn-secondary" id="reset-btn">
                        <i class="fas fa-redo"></i> Reset
                    </button>
                </div>
            </div>
            
            <div class="card">
                <h2 class="card-title"><i class="fas fa-chart-bar"></i> Visualisasi Profit</h2>
                
                <div class="chart-container" id="chart-container">
                    <div class="chart-bar cost-bar" id="cost-bar">
                        <div class="chart-bar-value" id="cost-value">Rp 0</div>
                        <div class="chart-bar-label">Biaya Total</div>
                    </div>
                    <div class="chart-bar price-bar" id="price-bar">
                        <div class="chart-bar-value" id="price-value">Rp 0</div>
                        <div class="chart-bar-label">Harga Jual</div>
                    </div>
                    <div class="chart-bar profit-bar" id="profit-bar">
                        <div class="chart-bar-value" id="profit-value">Rp 0</div>
                        <div class="chart-bar-label">Keuntungan</div>
                    </div>
                </div>
                
                <div class="help-text" style="text-align: center; margin-top: 60px;">
                    Diagram di atas menunjukkan perbandingan antara biaya total, harga jual, dan keuntungan
                </div>
            </div>
        </div>
        
        <div class="result-card">
            <h2 class="card-title"><i class="fas fa-poll"></i> Hasil Perhitungan</h2>
            
            <div class="result-row">
                <div class="result-item">
                    <div class="result-title">Harga Jual yang Disarankan</div>
                    <div class="result-value" id="harga-jual">Rp 0</div>
                    <div class="result-detail">Harga optimal untuk mencapai margin yang diinginkan</div>
                </div>
                
                <div class="result-item">
                    <div class="result-title">Keuntungan / Kerugian</div>
                    <div class="result-value" id="keuntungan">Rp 0</div>
                    <div class="result-detail" id="persen-keuntungan">0% dari total biaya</div>
                </div>
                
                <div class="result-item">
                    <div class="result-title">Total Biaya</div>
                    <div class="result-value" id="total-biaya">Rp 0</div>
                    <div class="result-detail">HPP + Biaya tambahan</div>
                </div>
            </div>
        </div>
        
        <div class="explanation">
            <h3><i class="fas fa-info-circle"></i> Cara Menentukan Harga Jual yang Akurat</h3>
            
            <p>Menentukan harga jual yang tepat adalah kunci keberhasilan bisnis. Harga yang terlalu rendah dapat mengakibatkan kerugian, sementara harga yang terlalu tinggi dapat membuat produk kurang kompetitif di pasaran.</p>
            
            <div class="formula-box">
                Harga Jual = (HPP + Biaya Tambahan) × (1 + Margin/100)
            </div>
            
            <p>Rumus di atas adalah dasar untuk menghitung harga jual yang akurat. Mari kita uraikan:</p>
            
            <ul>
                <li><span class="highlight">HPP (Harga Pokok Penjualan)</span>: Biaya langsung untuk memperoleh atau memproduksi barang.</li>
                <li><span class="highlight">Biaya Tambahan</span>: Biaya tidak langsung seperti pengemasan, transportasi, tenaga kerja, dll.</li>
                <li><span class="highlight">Margin Keuntungan</span>: Persentase keuntungan yang ingin Anda dapatkan dari total biaya.</li>
                <li><span class="highlight">Keuntungan</span>: Selisih antara harga jual dan total biaya (HPP + Biaya Tambahan).</li>
            </ul>
            
            <p>Dengan kalkulator ini, Anda dapat dengan mudah menghitung harga jual yang optimal dan menganalisis apakah bisnis Anda menghasilkan keuntungan atau kerugian.</p>
            
            <p><strong>Tips:</strong> Selalu pertimbangkan harga pasar, nilai produk di mata konsumen, dan biaya tak terduga saat menentukan harga jual.</p>
        </div>
        
        <footer>
            <p>Kalkulator Harga Jual & Profit © 2023 | Dibuat untuk membantu pengusaha menentukan harga jual yang akurat</p>
        </footer>
    </div>
    
    <!-- Font Awesome Icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    
    <script>
        // Elemen input
        const hppInput = document.getElementById('hpp');
        const marginInput = document.getElementById('margin');
        const biayaTambahanInput = document.getElementById('biaya-tambahan');
        const hitungBtn = document.getElementById('hitung-btn');
        const resetBtn = document.getElementById('reset-btn');
        
        // Elemen hasil
        const hargaJualElement = document.getElementById('harga-jual');
        const keuntunganElement = document.getElementById('keuntungan');
        const persenKeuntunganElement = document.getElementById('persen-keuntungan');
        const totalBiayaElement = document.getElementById('total-biaya');
        
        // Elemen chart
        const costBar = document.getElementById('cost-bar');
        const priceBar = document.getElementById('price-bar');
        const profitBar = document.getElementById('profit-bar');
        const costValue = document.getElementById('cost-value');
        const priceValue = document.getElementById('price-value');
        const profitValue = document.getElementById('profit-value');
        
        // Format angka ke Rupiah
        function formatRupiah(angka) {
            return 'Rp ' + angka.toFixed(0).replace(/\d(?=(\d{3})+$)/g, '$&.');
        }
        
        // Format persen
        function formatPersen(angka) {
            return angka.toFixed(2) + '%';
        }
        
        // Hitung harga jual dan keuntungan
        function hitungHargaJual() {
            // Ambil nilai input
            const hpp = parseFloat(hppInput.value) || 0;
            const margin = parseFloat(marginInput.value) || 0;
            const biayaTambahan = parseFloat(biayaTambahanInput.value) || 0;
            
            // Hitung total biaya
            const totalBiaya = hpp + biayaTambahan;
            
            // Hitung harga jual
            const hargaJual = totalBiaya * (1 + margin/100);
            
            // Hitung keuntungan/kerugian
            const keuntungan = hargaJual - totalBiaya;
            
            // Hitung persentase keuntungan/kerugian
            const persenKeuntungan = (keuntungan / totalBiaya) * 100;
            
            // Tampilkan hasil
            totalBiayaElement.textContent = formatRupiah(totalBiaya);
            hargaJualElement.textContent = formatRupiah(hargaJual);
            keuntunganElement.textContent = formatRupiah(keuntungan);
            
            // Tentukan apakah untung atau rugi
            if (keuntungan > 0) {
                keuntunganElement.className = 'result-value profit';
                persenKeuntunganElement.textContent = `+${formatPersen(persenKeuntungan)} dari total biaya`;
                persenKeuntunganElement.className = 'result-detail profit';
            } else if (keuntungan < 0) {
                keuntunganElement.className = 'result-value loss';
                persenKeuntunganElement.textContent = `${formatPersen(persenKeuntungan)} dari total biaya`;
                persenKeuntunganElement.className = 'result-detail loss';
            } else {
                keuntunganElement.className = 'result-value neutral';
                persenKeuntunganElement.textContent = `0% dari total biaya`;
                persenKeuntunganElement.className = 'result-detail neutral';
            }
            
            // Update chart
            updateChart(totalBiaya, hargaJual, keuntungan);
        }
        
        // Update chart visualisasi
        function updateChart(totalBiaya, hargaJual, keuntungan) {
            // Cari nilai maksimum untuk skala
            const maxValue = Math.max(totalBiaya, hargaJual, keuntungan > 0 ? keuntungan : 0);
            const chartHeight = 220; // Tinggi chart container
            
            // Hitung tinggi setiap bar
            const costHeight = (totalBiaya / maxValue) * (chartHeight - 70);
            const priceHeight = (hargaJual / maxValue) * (chartHeight - 70);
            const profitHeight = keuntungan > 0 ? (keuntungan / maxValue) * (chartHeight - 70) : 5;
            
            // Set tinggi bar
            costBar.style.height = `${costHeight}px`;
            priceBar.style.height = `${priceHeight}px`;
            profitBar.style.height = `${profitHeight}px`;
            
            // Update nilai di atas bar
            costValue.textContent = formatRupiah(totalBiaya);
            priceValue.textContent = formatRupiah(hargaJual);
            profitValue.textContent = formatRupiah(keuntungan);
            
            // Sembunyikan profit bar jika tidak ada keuntungan
            if (keuntungan <= 0) {
                profitBar.style.opacity = '0.5';
                profitValue.textContent = "Rp 0";
            } else {
                profitBar.style.opacity = '1';
            }
        }
        
        // Reset form
        function resetForm() {
            hppInput.value = '';
            marginInput.value = '';
            biayaTambahanInput.value = '';
            
            totalBiayaElement.textContent = 'Rp 0';
            hargaJualElement.textContent = 'Rp 0';
            keuntunganElement.textContent = 'Rp 0';
            keuntunganElement.className = 'result-value neutral';
            persenKeuntunganElement.textContent = '0% dari total biaya';
            persenKeuntunganElement.className = 'result-detail neutral';
            
            // Reset chart
            costBar.style.height = '5px';
            priceBar.style.height = '5px';
            profitBar.style.height = '5px';
            costValue.textContent = 'Rp 0';
            priceValue.textContent = 'Rp 0';
            profitValue.textContent = 'Rp 0';
            profitBar.style.opacity = '1';
        }
        
        // Event listener untuk tombol hitung
        hitungBtn.addEventListener('click', hitungHargaJual);
        
        // Event listener untuk tombol reset
        resetBtn.addEventListener('click', resetForm);
        
        // Hitung otomatis saat input berubah
        hppInput.addEventListener('input', hitungHargaJual);
        marginInput.addEventListener('input', hitungHargaJual);
        biayaTambahanInput.addEventListener('input', hitungHargaJual);
        
        // Hitung saat halaman pertama kali dimuat
        document.addEventListener('DOMContentLoaded', hitungHargaJual);
    </script>
</body>
</html>
